.video-player{
	width: 100%;
	height: 230px;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 70px;
}
.video-content{
	width: 100%;
	display: flex;
	flex-direction: column;
	margin-top: 5rpx;
	background-color: #FFFFFF;
}
.video-content .video-title{
	width: 100%;
	height: 80rpx;
	display: flex;
	align-items: center;
}
.video-title .video-name{
	flex: 1;
	font-size: 18px;
	margin-left: 25rpx;
}
.video-title .video-sd{
	font-size: 14px;
	color: #717171;
	margin-right: 4rpx;
}
.video-title .video-more{
	width: 24px;
	font-size: 24px;
	margin-right: 30rpx;
}
.video-desc{
	width: 100%;
	display: flex;
	flex-direction: column;
	font-size: 16px;
}
.video-desc .actors{
	margin-left: 20rpx;
	font-size: 14px;
	width: 700rpx;
	white-space: wrap;
}
.video-desc .desc{
	font-size: 14px;
	width: 700rpx;
	white-space: wrap;
	margin: 10rpx 20rpx;
}
.video-opt{
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	background-color: #FFFFFF;
	padding: 0 50rpx;
	margin-top: 10rpx;
}
.video-opt .opt{
	height: 60rpx;
	display: flex;
	align-items: center;
	border-radius: 15px;
}
.opt .opt-icon{
	font-size: 24px;
	margin-left: 10rpx;
}
.opt .opt-name{
	font-size: 18px;
	margin: 0 10rpx;
}
.video-source-title{
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: space-between;
	background-color: #FFFFFF;
	margin-top: 10rpx;
}
.video-source-title .source-title{
	font-size: 18px;
	margin-left: 25rpx;
}
.video-source-title .source-desc{
	font-size: 14px;
	margin-right: 25rpx;
	color: #717171;
}
.video-source{
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	background-color: #FFFFFF;
	padding: 5rpx;
}
.video-source .source{
	font-size: 16px;
	height: 60rpx;
	margin-left: 25rpx;
	border-radius: 10px;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	padding: 0 10rpx;
	margin: 10rpx 20rpx;
}
.video-choise-title{
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: space-between;
	background-color: #FFFFFF;
	margin-top: 10rpx;
}
.video-choise-title .choise-title{
	font-size: 18px;
	margin-left: 25rpx;
}
.video-choise-title .source-name{
	font-size: 14px;
	margin-right: 25rpx;
	color: #717171;
}
.video-choise{
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	background-color: #FFFFFF;
	padding: 5rpx;
}
.video-choise .choise{
	font-size: 16px;
	height: 60rpx;
	margin-left: 25rpx;
	border-radius: 10px;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	padding: 0 10rpx;
	margin: 10rpx 15rpx;
}
.other{
	background-color: #FFFFFF;
	flex: 1;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	margin-top: 10rpx;
}
.comment{
	height: 100%;
	font-size: 18px;
	color: #717171;
	text-align: center;
	padding: 10rpx 0;
}
.comment-content{
	flex: 1;
	font-size: 14px;
	text-align: center;
	color: #878787;
	margin: 20rpx 0;
}

